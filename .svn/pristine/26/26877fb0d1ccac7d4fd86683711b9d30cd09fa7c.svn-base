package app;

import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.Test;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import static org.junit.jupiter.api.Assertions.assertEquals;

public class UpperCaseTest  { //Feedback: let's remove the duplication between the LowerCaseTest and UpperCaseTest since these are tests on different operations.

  @Test
  void transformhello() {
    assertEquals("HELLO", UpperCaseOperation.convert("hello"));
  }

  @Test
  void transformHello() {
    assertEquals("HELLO", UpperCaseOperation.convert("Hello"));
  }

  @Test
  void transformHeL1o() {
    assertEquals("HEL1O", UpperCaseOperation.convert("HeL1o"));
  }

  @Test
  void StringwriteheLLoAndClose() throws IOException {
    StringWriter writer = new StringWriter(UpperCaseOperation::convert);

    writer.write("heLLo");
    writer.close();

    assertEquals("HELLO", writer.getContents());
  }

  @Test
  void StringwritehiclosewritethEre() throws IOException {
    StringWriter writer = new StringWriter(UpperCaseOperation::convert);

    writer.write("hi");
    writer.close();
    writer.write("thEre");

    assertEquals("HI", writer.getContents());
  }

  @Test
  void FilewriteheLLoAndClose() throws IOException {
    FileWriter writer = new FileWriter("myfile.txt", UpperCaseOperation::convert);

    writer.write("heLLo");
    writer.close();

    assertEquals("HELLO", Files.readString(Path.of("myfile.txt")));
  }

  @Test
  void FilewritehiclosewritethEre() throws IOException {
    FileWriter writer = new FileWriter("myfile.txt", UpperCaseOperation::convert);

    writer.write("hi");
    writer.close();
    writer.write("thEre");

    assertEquals("HI", Files.readString(Path.of("myfile.txt")));
  }

  @AfterEach
  public void deleteFileCreatedInTests() throws IOException {
    Files.deleteIfExists(Path.of("myfile.txt"));
  }
}
