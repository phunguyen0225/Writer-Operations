package app;

import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.Test;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;

import static org.junit.jupiter.api.Assertions.assertEquals;

public abstract class OperationTest  {
  abstract StringWriter createStringWriter();
  abstract FileWriter createFileWriter();

  abstract String convert(String text);
  abstract String outputTransformhello();
  abstract String outputTransformHeL1o();

  abstract String outputConvertheLLo();
  abstract String inputConvertHi();
  abstract String outputConvertHi();

  @Test
  void transformhello() {
    assertEquals(outputTransformhello(), convert("hello"));
  }

  @Test
  void transformHello() {
    assertEquals(outputTransformhello(), convert("Hello"));
  }

  @Test
  void transformHeL1o() {
    assertEquals(outputTransformHeL1o(), convert("HeL1o"));
  }

  @Test
  void StringwriteheLLoAndClose() throws IOException {
    StringWriter writer = createStringWriter();

    writer.write("heLLo");
    writer.close();

    assertEquals(outputConvertheLLo(), writer.getContents());
  }

  @Test
  void StringwritehiclosewritethEre() throws IOException {
    StringWriter writer = createStringWriter();

    writer.write(inputConvertHi());
    writer.close();
    writer.write("thEre");

    assertEquals(outputConvertHi(), writer.getContents());
  }

  @Test
  void FilewriteheLLoAndClose() throws IOException {
    FileWriter writer = createFileWriter();

    writer.write("heLLo");
    writer.close();

    assertEquals(outputConvertheLLo(), Files.readString(Path.of("myfile.txt")));
  }

  @Test
  void FilewritehiclosewritethEre() throws IOException {
    FileWriter writer = createFileWriter();

    writer.write(inputConvertHi());
    writer.close();
    writer.write("thEre");

    assertEquals(outputConvertHi(), Files.readString(Path.of("myfile.txt")));
  }

  @AfterEach
  public void deleteFileCreatedInTests() throws IOException {
    Files.deleteIfExists(Path.of("myfile.txt"));
  }
}
