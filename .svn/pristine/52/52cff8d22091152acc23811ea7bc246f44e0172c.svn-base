package app;

import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.Test;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import static org.junit.jupiter.api.Assertions.assertEquals;

public class LowerCaseTest  {
  LowerCaseOperation lowerCaseOperation = new LowerCaseOperation();

  @Test
  void transformhello() {
    assertEquals("hello", LowerCaseOperation.convert("hello"));
  }

  @Test
  void transformHello() {
    assertEquals("hello", LowerCaseOperation.convert("Hello"));
  }

  @Test
  void transformHeL1o() {
    assertEquals("hel1o", LowerCaseOperation.convert("HeL1o"));
  }

  @Test
  void StringwriteheLLoAndClose() throws IOException {
    StringWriter writer = new StringWriter(lowerCaseOperation);

    writer.write("heLLo");
    writer.close();

    assertEquals("hello", writer.getContents());
  }

  @Test
  void StringwriteHIclosewritethEre() throws IOException {
    StringWriter writer = new StringWriter(lowerCaseOperation);

    writer.write("HI");
    writer.close();
    writer.write("thEre");

    assertEquals("hi", writer.getContents());
  }

  @Test
  void FilewriteheLLoAndClose() throws IOException {
    FileWriter writer = new FileWriter("myfile.txt", lowerCaseOperation);

    writer.write("heLLo");
    writer.close();

    assertEquals("hello", Files.readString(Path.of("myfile.txt")));
  }

  @Test
  void FilewriteHIclosewritethEre() throws IOException {
    FileWriter writer = new FileWriter("myfile.txt", lowerCaseOperation);

    writer.write("HI");
    writer.close();
    writer.write("thEre");

    assertEquals("hi", Files.readString(Path.of("myfile.txt")));
  }

  @AfterEach
  public void deleteFileCreatedInTests() throws IOException {
    Files.deleteIfExists(Path.of("myfile.txt"));
  }
}
